<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dnieln7.portfoliomobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PortfolioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PortfolioMobile">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PortfolioMobile.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.PortfolioMobile" />

        <activity
            android:name=".ui.main.MainSwipeOverlay"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PortfolioMobile.ShowCase" />
    </application>

</manifest>